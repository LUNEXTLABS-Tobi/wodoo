# db access (define if you dont use RUN_POSTGRES=1)

# external directory where files are stored (when using file storage)
ODOO_FILES=~/.odoo/files

NO_QWEB_DELETE=0
VERBOSE=0

FORCE_CONTINUE=0
DEVMODE=0

DUMPS_PATH=~/odoo_dumps
LINUX_OWNER_CREATED_BACKUP_FILES=1000

RESTART_CONTAINERS=1

DB_ODOO_FILEFORMAT={customs}.odoo.{date:%Y%m%d%H%M%S}.dump.gz
DB_CALENDAR_FILEFORMAT={customs}.calendar.{date:%Y%m%d%H%M%S}.dump.gz
CRONJOB_BACKUP_DAILY=0 0 * * * ${JOB_BACKUP_ODOO_DB}
CRONJOB_BACKUP_DAILY_CALENDAR=0 0 * * * ${JOB_BACKUP_CALENDAR_DB}
DOCKER_MACHINE=1
USE_DOCKER=1

SAFE_KILL=postgres,redis
