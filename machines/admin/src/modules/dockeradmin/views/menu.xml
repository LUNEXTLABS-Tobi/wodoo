<?xml version="1.0"?>
<odoo>
  <data noupdate="0">
    <menuitem name="Admin" parent="" id="menu_root"/>
    <record model="ir.actions.server" id="act_update_containers_server">
      <field name="name">update_containers</field>
      <field name="type">ir.actions.server</field>
      <field name="model_id" ref="model_docker_container"/>
      <field name="code">action=model.update_docker()</field>
    </record>
    <menuitem id="menu_containers" parent="menu_root" name="Containers" action="act_update_containers_server"/>
    <record model="ir.actions.server" id="act_update_instances">
      <field name="name">update_instances</field>
      <field name="type">ir.actions.server</field>
      <field name="model_id" ref="model_docker_odoo_instance"/>
      <field name="code">action=model.update_instances()</field>
    </record>
    <menuitem id="menu_instances" parent="menu_root" name="Instances" action="act_update_instances"/>
    <record model="ir.actions.server" id="act_modules">
      <field name="name">update_branches</field>
      <field name="type">ir.actions.server</field>
      <field name="model_id" ref="model_git_branch"/>
      <field name="code">action=model.update_branches()</field>
    </record>
    <menuitem id="menu_modules" parent="menu_root" name="Branches" action="act_modules"/>
    <record model="ir.actions.act_window" id="act_new_branch_window">
      <field name="name">New Branch</field>
      <field name="res_model">branch.new</field>
      <field name="view_mode">form</field>
      <field name="view_type">form</field>
    </record>
    <menuitem parent="menu_root" id="menu_new_branch" action="act_new_branch_window"/>
  </data>
</odoo>
