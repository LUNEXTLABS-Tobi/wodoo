<?xml version="1.0"?>
<odoo>
  <data noupdate="0">
    <record id="view_docker_container_tree" model="ir.ui.view">
      <field name="model">docker.container</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="status"/>
          <field name="public_port"/>
          <button name="start" string="Start" type="object" icon='fa-start'/>
          <button name="stop" string="Stop" type="object" icon='fa-stop'/>
		  <button name="restart" string="Restart" icon='fa-recycle' type="object" />
        </tree>
      </field>
    </record>
  </data>
</odoo>
