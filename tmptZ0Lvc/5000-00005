networks:
  default:
    external:
      name: home_marc_odoo_default
services:
  libreoffice:
    build: $ODOO_HOME/machines/libreoffice
    container_name: caetec11_libreoffice
    env_file:
    - $ODOO_HOME/run/settings
    environment:
      INPUT: /tmp/lo/1
      OUTPUT: /tmp/lo/2
    volumes:
    - libreoffice_exchange:/tmp/lo
  odoo_base:
    depends_on:
    - libreoffice
    env_file:
    - $ODOO_HOME/run/settings
    environment:
      LIBREOFFICE_RECEIVE: /opt/libreoffice/2
      LIBREOFFICE_SEND: /opt/libreoffice/1
    volumes:
    - libreoffice_exchange:/opt/libreoffice
version: '3.5'
volumes:
  libreoffice_exchange: null

